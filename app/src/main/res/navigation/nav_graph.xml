<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.son.movie.screens.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />

    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.son.movie.screens.detail.DetailFragment"
        android:label="Movie Details"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="movieId"
            app:argType="integer" />
        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.son.movie.screens.search.SearchFragment"
        android:label="Search Movie"
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="query"
            app:argType="string" />
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/nowPlayingFragment"
        android:name="com.son.movie.screens.home.viewpager.nowplaying.NowPlayingFragment"
        android:label="NowPlayingFragment" >
    </fragment>
    <fragment
        android:id="@+id/popularFragment"
        android:name="com.son.movie.screens.home.viewpager.popular.PopularFragment"
        android:label="PopularFragment" >
    </fragment>
    <fragment
        android:id="@+id/overviewFragment"
        android:name="com.son.movie.screens.detail.viewpager.overview.OverviewFragment"
        android:label="OverviewFragment" />
    <fragment
        android:id="@+id/topRatedFragment"
        android:name="com.son.movie.screens.home.viewpager.toprated.TopRatedFragment"
        android:label="TopRatedFragment" >
    </fragment>
    <fragment
        android:id="@+id/upcomingFragment"
        android:name="com.son.movie.screens.home.viewpager.upcoming.UpcomingFragment"
        android:label="UpcomingFragment" >
    </fragment>
    <fragment
        android:id="@+id/watchListFragment"
        android:name="com.son.movie.screens.watchlist.WatchListFragment"
        android:label="fragment_watch_list"
        tools:layout="@layout/fragment_watch_list" />
</navigation>